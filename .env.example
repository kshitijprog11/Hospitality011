# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/feedback_platform
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=feedback_platform
DATABASE_USER=username
DATABASE_PASSWORD=password

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
HUGGING_FACE_API_KEY=your_hugging_face_api_key_here

# Communication APIs
WHATSAPP_API_TOKEN=your_whatsapp_api_token_here
EMAIL_API_KEY=your_email_api_key_here
EMAIL_FROM=noreply@yourdomain.com

# Application Settings
SECRET_KEY=your_secret_key_here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Authentication
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# NLP Configuration
SENTIMENT_THRESHOLD_NEGATIVE=-0.5
SENTIMENT_THRESHOLD_POSITIVE=0.5
FLAGGED_KEYWORDS=urgent,emergency,terrible,awful,disgusting,worst

# Notification Settings
ENABLE_EMAIL_ALERTS=True
ENABLE_BROWSER_NOTIFICATIONS=True
ALERT_THRESHOLD_SENTIMENT=-0.7

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=txt,csv,json

# Redis (for caching and background tasks)
REDIS_URL=redis://localhost:6379/0